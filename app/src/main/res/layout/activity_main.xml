<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <SurfaceView
        android:id="@+id/main_record_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/main_record_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="开始录像"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_record_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="删除文件"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_shengcheng_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main_delete_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="生成"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>